<div class="container mt-5">
 <div class="row"></div>

<h3>商品編集</h3>

<%= form_with model: @item, ulr:admin_item_path, local: true do |f| %>
<table>
 <tr>
  <td>商品画像</td>
  <td><%= f.file_field :image, accept: "image/*" %></td>
 </tr>

 <tr>
  <td>商品名</td>
  <td><%= f.text_field :name %></td>
  </tr>

  <tr>
   <td>商品説明</td>
   <td><%= f.text_area :body, placeholder %></td>
  </tr>

  <tr>
   <td>ジャンル</td>
   <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
  </tr>

  <tr>
   <td>税抜価格</td>
   <td><%= f.text_field :price %>円</td>
  </tr>

  <tr>
   <td>販売ステータス</td>
   <td>
    <%= f.radio_button :is_sale, :true %>
    <%= f.label :is_sale, "販売中" %>
    <%= f.radio_button :is_sale, :false %>
    <%= f.label :is_sale, "販売停止中" %>
   </td>
  </tr>

  <tr>
   <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
  </tr>
  <% end %>
</table>
 </div>
</div>
