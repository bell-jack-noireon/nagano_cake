<div class="container-feild mt-5">
    <div class="row">
      <div class="col-2 offset-1">
        <h4 class="back text-center">注文情報入力</h4>
      </div>
    </div>
    <%= form_with model: @order, url:confirm_orders_path, local: true do |f| %>
      <div class="row mt-3">
        <div class="col-md-3 offset-1">
          <h4>支払方法</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-2 offset-2">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %><br>
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method_bank_transfer, Order.payment_methods_i18n[:bank_transfer]%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 offset-1">
          <h4>お届け先</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-7 offset-2">
          <%= f.radio_button :address_id, 0 %><%= f.label :address_id_0, "ご自身の住所" %><br>
          <div class="ml-4">
            〒<%= current_customer.post_code %> <%= current_customer.address %> <br>
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </div>
          <p class="mt-3"><%= f.radio_button :address_id, 1 %><%= f.label :address_id_1, "登録済住所から選択" %></p>
          <p class="mr-1"><%= f.select :address, options_from_collection_for_select(@address, :id, :address_display) %></p>
          
          <p><%= f.radio_button :address_id, 2 %><%= f.label :address_id_2, "新しいお届け先" %></p>
          <p>郵便番号(ハイフンなし)<%= f.text_field :post_code, placeholder: "0000000" %></p>
          <p><span class="margin-right-137">住所</span><%= f.text_field :address, placeholder: "東京都渋谷区代々木町0-0" %></p>
          <p><span class="margin-right-137">宛名</span><%= f.text_field :name, placeholder: "令和道子" %></p>
        </div>
      </div>
      
      <div class="row">
        <div class="col-1 offset-5">
         <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

</div>