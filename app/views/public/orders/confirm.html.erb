<div class="container mt-3">
  <div class="row">
    <div class="col-3 offset-1">
      <h3>注文情報確認</h3>
    </div>
  </div>

    <div class="row">
      <div class="col-6 mr-5">
        <table>
          <tr>
            <td>商品名</td>
            <td>単価(税込み)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
          <%= @cart_items.each do |cart| %>
          <tr>
            <td><%= cart.item.name %></td>
            <td><%= cart.item.price %></td>
            <td><%= cart.amount %></td>
            <td><%= cart.item.price*cart.amount %></td>
          </tr>
        </table>
        <% end %>

        <div class="col-2 mr-3">
          <table>
            <tr>
              <td>送料</td>
              <td></td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td></td>
            </tr>
            <tr>
              <td>請求金額</td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-1 mr-5 mt-3">
        <h3>支払方法</h3>
        <p><%= order.payment_method_il8n %></p>
      </div>
    </div>

    <div class ="row">
      <div class="col-7 mr-5 mt-3">
        <h3>お届け先</h3>

      </div>
    </div>

    <div class="row">
      <div class="col-2 mt-3 text-center">
        <%= from_with model: @order, url: orders_path, local: true do |f| %>




        <%= f.submit"注文を確定する", class: "btn btn-success" %>
      </div>
    </div>

</div>