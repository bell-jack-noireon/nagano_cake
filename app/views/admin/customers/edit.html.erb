<div class="container">
  <% if @customer.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= @customer.errors.count %>件のエラーが発生しました
      </h6>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h3 class="back"><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h3>
  <div class="row mt-5">
    <div class="col-xs-12">
      <%= form_with model: @customer, url: admin_customer_path, local: true, method: :patch do |f| %>
      <div class="col-xs-10">
        <div class="form-group">
          <%= f.label :会員ID, class:"col-sm-4 control-label" %>
          <%= f.label :"#{@customer.id}" %>
        </div>
        <div class="form-group">
          <%= f.label :氏名, class:"col-sm-4 control-label" %>
          <%= f.text_field :last_name, class:"col-sm-3" %>
          <%= f.text_field :first_name, class:"col-sm-3" %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ, class:"col-sm-4 control-label" %>
          <%= f.text_field :last_name_kana, class:"col-sm-3" %>
          <%= f.text_field :first_name_kana, class:"col-sm-3" %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号, class:"col-sm-4 control-label" %>
          <%= f.text_field :post_code, class:"col-sm-3" %>

        <div class="form-group">
          <%= f.label :住所, class:"col-sm-4 control-label" %>
          <%= f.text_field :address, class:"col-sm-7" %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号, class:"col-sm-4 control-label" %>
          <%= f.text_field :phone_number, class:"col-sm-3" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス, class:"col-sm-4 control-label" %>
          <%= f.text_field :email, class:"col-sm-5" %>
        </div>

        <div class="form-group">
          <%= f.label :会員ステータス, class:"col-sm-4 control-label" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="margin-left">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>