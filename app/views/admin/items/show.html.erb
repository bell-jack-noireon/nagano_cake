<div class='container-fould mt-5'>
  <div class='row'>
    <div class='col-md-2 offset-md-2'>
        <h3>商品詳細</h3>
    </div>
  </div>

  <div class='row'>
   <div class='col-md-3 offset-md-1'>
    <div><%= image_tag @item.item_image, size:'300x300' %></div>
   </div>
   <div class='col-md-5 offset-md-1'>
    <table>
     <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
     </tr>
     <tr>
      <td>商品説明</td>
      <td><%= @item.body %></td>
     </tr>
     <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
     </tr>
     <tr>
      <td>税込価格<br>(税抜価格)</td>
      <td><%= @item.price*1.1 %>(<%= @item.price %>)円</td>
     </tr>
     <tr>
      <td>販売ステータス</td>
      <td>
       <% if @item.is_sale %>販売中
       <% elsif %>
       販売停止中
       <% end %>
       </td>
     </tr>
     <tr>
       <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></td>
     </tr>
    </table>
   </div>
  </div>
</div>
