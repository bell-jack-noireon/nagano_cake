<div class="container">
  <h3><%= (@customer.last_name + @customer.first_name)さんの会員情報編集 %></h3>
  <div class="row">
    <p>会員ID<%= @customer.id %></p><br>
    <%= form_with model: @customer, local: true, method: :patch do |f| %>
      <div>
        <div class="form-group">
          <%= f.label :氏名 %>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :post_code %>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :会員ステータス %>
          <% if @customer.is_deleted %>
            <%= f.radio_button, "退会" %>
          <% else %>
            <%= f.radio_button, "有効" %>
          <% end %>
        </div>
      </div>
      <div>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>