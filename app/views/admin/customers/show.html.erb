<div class="container">
  <h3><%= (@customer.last_name + @customer.first_name) %>さんの会員詳細</h3>
  <div class="row">
    <p>会員ID<%= @customer.id %></p><br>
    <p>氏名<%= (@customer.last_name + @customer.first_name) %></p><br>
    <p>フリガナ<%= (@customer.last_name_kana + @customer.first_name_kana) %></p><br>
    <p>郵便番号<%= @customer.post_code %></p><br>
    <p>住所<%= @customer.address %></p><br>
    <p>電話番号<%= @customer.phone_number %></p><br>
    <p>メールアドレス<%= @customer.email %></p><br>
    <p>
      会員ステータス
      <% if @customer.is_deleted %>
        退会
      <% else %>
        有効
      <% end %>
    </p><br>

    <span><%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-primary" %></span>
    <span><%= link_to "注文履歴一覧を見る", admin_orders_path, class:"btn btn-success" %></span>
  </div>
</div>