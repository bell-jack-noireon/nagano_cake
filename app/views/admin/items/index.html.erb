<div class="container mt-5">
  <div class="row">
    <div class="col-md-2 mt-8 mb-3">
     <h3><span style="background-color: #f5f5f5;"><strong>商品一覧</strong></span></h3>
    </div>
    <%= link_to new_admin_item_path do %>
    <div class="icon-position">
     <i class="fa-solid fa-circle-plus fa-2xl"></i>
    </div>
    <% end %>
  </div>

  <div calss="row">

   <table class="table table-borderd">
     <tr style="background-color: #f5f5f5;">
      <th><strong>商品ID</strong></th>
      <th><strong>商品名</strong></th>
      <th><strong>税抜価格</strong></th>
      <th><strong>ジャンル</strong></th>
      <th><strong>ステータス</strong></th>
     </tr>

   <% @items.each do |item| %>

     <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id), class:"item-name" %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
       <% if item.is_sale %>
        <span class="sale-status-true"><strong>販売中</strong></span>
       <% elsif %>
        <span class="sale-status-false"><strong>販売停止中</strong></span>
       <% end %>
      </td>
     </tr>
   <% end %>
   </table>
   <%= paginate @items %>
  </div>
</div>

<style>
 .icon-psition i {
  display: inline-block;
}

 .icon-position {
  position: absolute;
  top: 130px;
  right: 200px;
  color: #a9a9a9;
 }

.item-name {
  color: #000;
  text-decoration: underline;
}

.pagination {
  justify-content: center;
  margin: 0 auto;
}

.page {
  margin: 0 5px;
}

.sale-status-true {
 color: #37a34a;
}

.sale-status-false {
 color: #a9a9a9;
}

</style>