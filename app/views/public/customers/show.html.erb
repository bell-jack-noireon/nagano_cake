<div class="container">
  <h3>マイページ</h3>
  <div class="row">

    <div class="text-left">
      <span><strong>登録情報</strong></span>
      <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success" %>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= (@customer.last_name + @customer.first_name) %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= (@customer.last_name_kana + @customer.first_name_kana) %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </body>
    </table>
  </div>
  <div>
    <span><strong>配送先</strong></span>
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
  </div><br>
  <div>
    <span><strong>注文履歴</strong></span>
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
  </div>
</div>
