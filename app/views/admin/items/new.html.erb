<div class="container">
 <div class="row">
  <% if @item.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= @item.errors.count %>件のエラーが発生しました
      </h6>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="col-md-8 mx-auto">
    <h3 class="mt-8 mb-5"><span class="back"><strong>商品新規登録</strong></span></h3>
  </div>
 </div>

 <div class="outer">
  <div class="col-xs-12">
   <%= form_with model: @item, url:admin_items_path, local: true do |f| %>
    <div class="inner">
     <div class="form-group">
      <%= f.label :商品画像, class:"col-sm-4" %>
      <%= f.file_field :item_image, accept: "image/*" %>
     </div>

     <div class="form-group col-xs-9">
      <%= f.label :商品名, class:"col-sm-4" %>
      <%= f.text_field :name, placeholder: "商品名", size: "30" %>
     </div>

     <div class="form-group col-xs-9">
      <%= f.label :商品説明, class:"col-sm-4 control-label position" %>
      <%= f.text_area :body, placeholder: "ここに説明文を記述します", size: "30x5" %>
     </div>

     <div class="form-group col-xs-9">
      <%= f.label :ジャンル, class:"col-sm-4 control-label" %>
      <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択して下さい--" %>
     </div>

     <div class="form-group col-xs-9">
      <%= f.label :税抜価格, class:"col-sm-4 control-label" %>
      <%= f.text_field :price, placeholder: "1000", size: "30" %>円
     </div>

     <div class="form-group col-xs-9">
       <%= f.label :販売ステータス, class:"col-sm-4 control-label" %>
       <%= f.radio_button :is_sale, :true %>
       <%= f.label :is_sale, "販売中", {value: :true, style: "display: inline-block;"} %>
       <%= f.radio_button :is_sale, :false %>
       <%= f.label :is_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %>
     </div>
    </div>
    <div class="col-xs-9 col-xs-offset-4">
     <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
   <% end %>
  </div>
 </div>
</div>

<style>
 .outer {
  text-align: center;
 }

 .inner {
  display: inline-block;
  text-align: left;
 }

 .form-group {
  width: 500px;
  white-space: nowrap;
 }

 .position {
  position: absoluute;
  bottom: 110px;
 }

</style>
