<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h4 class="back">マイページ</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-2">
      <h5 class="mt-1"><strong>登録情報</strong></h5>
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-10">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active" style="width:25%">氏名</td>
            <td><%= (@customer.last_name + @customer.first_name) %></td>
          </tr>
          <tr>
            <td class="table-active" style="width:25%">カナ</td>
            <td><%= (@customer.last_name_kana + @customer.first_name_kana) %></td>
          </tr>
          <tr>
            <td class="table-active" style="width:25%">郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td class="table-active" style="width:25%">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-active" style="width:25%">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="table-active" style="width:25%">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </body>
      </table>
    </div>
  </div>

  <div class="row mt-1">
    <div class="col-md-2">
      <h5><strong>配送先</strong></h5>
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">
      <h5><strong>注文履歴</strong></h5>
    </div>
    <div class ="col-md-2">
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
