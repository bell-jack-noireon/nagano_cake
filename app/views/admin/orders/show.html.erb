<h2>注文履歴詳細</h2>

<table>
  <%= form_with model: @order, url: admin_orders_path, method: :patch, local: true do |f| %>
    <tr>
      <th>購入者</th>
      <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.post_code %><%= @order.address %><%= @order.name %></td>
    </tr>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= f.select :status, Order.statuses_i18n %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </td>
    </tr>
  <% end %>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>

      <% @sum = 0 %>
      <% @sum += order_detail.item.tax_incluted_price %>

      <%= form_with model: order_detail , url: admin_order_details_path(order_detail.id) , method: :patch , local: true do |f| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.tax_incluted_price %></td>
          <td>
            <%= f.select :production_status, OrderDetail.production_statuses_i18n %>
            <%= f.submit "更新", class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @sum %>円</td>
  </tr>
  <tr>
    <th>送料</th>
    <td>800円</td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= @sum + 800 %>円</td>
  </tr>
</table>