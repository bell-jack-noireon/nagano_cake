<div class="container mt-5">
  <div class="row">
    <div class="col-md-2">
     <h3>商品一覧</h3>
    </div>
    <%= link_to new_admin_item_path do %>
    <i class="fa-solid fa-square-plus"></i>
    <% end %>
  </div>

  <div calss="row">

   <table class="table table-borderd">
     <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
     </tr>

   <% @items.each do |item| %>

     <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td>
       <% if item.is_sale %>販売中
       <% elsif %>
       販売停止中
       <% end %>
      </td>
     </tr>
   <% end %>
   </table>
   <%= paginate @items %>
  </div>
</div>