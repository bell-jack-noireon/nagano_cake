<div class="container">
  <div class="row">
    <div class="col-lg-10">

      <h3 class="back">新規会員登録</h3>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <table class="table table-borderless">
          <tr>
            <td class="d-flex justify-content-between">
              名前<span>(姓)</span>
            </td>
            <td>
               <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
               <span class="margin-right">(名)</span><%= f.text_field :first_name, placeholder: "道子" %>
            </td>
          </tr>
          
          <tr>
            <td class="d-flex justify-content-between">
              フリガナ<span>(セイ)</span>
            </td>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
              (メイ) <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
            </td>
          </tr>
          
          <tr>
            <td>メールアドレス</td>
            <td>
              <%= f.text_field :email, placeholder: "sample@example.com" %>
            </td>
          </tr>
          
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td>
              <%= f.text_field :post_code, placeholder: "0000000" %>
            </td>
          </tr>
          
          <tr>
            <td>住所</td>
            <td>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "address-input" %>
            </td>
          </tr>
          
          <tr>
            <td>電話番号（ハイフンなし）</td>
            <td><%= f.text_field :phone_number, placeholder: "00000000000" %></td>
          </tr>
          
          <tr>
            <td>パスワード（6文字以上）</td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password"  %>
            </td>
          </tr>
      
          <tr>
            <td>パスワード(確認用)</td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password"  %>
            </td>
          </tr>
          
          <tr>
            <td></td>
            <td>
              <%= f.submit "新規登録", class:"btn btn-success" %>
            </td>
          </tr>
          
        </table>
      <% end %>
      
      <h5 class="back">すでに登録済みの方</h5>
      <div class="d-flex align-items-center">
        <span><%= render "public/shared/links" %></span>
        <span> からログインしてください</span>
      </div>
    </div>
  </div>
</div>
