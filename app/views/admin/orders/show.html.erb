<div>
  <%= flash[:notice] %>
</div>

<h2>注文履歴詳細</h2>



<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td>
        <%= form_with model: order_detail, url: admin_path(order_detail), method: :patch do |f| %>
          <%= f.select :production_status, Order_detail.producion_statuses_i18n, class: "form-control-sm" %>
          <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <%= paginate @orders %>
 </tbody>
</table>