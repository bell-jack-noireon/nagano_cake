<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h4 class="mt-8 mb-3">管理者ログイン</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %></td>
          </tr>

          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, size: "30" %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary d-grid gap-2 col-3 mx-auto" %></td>
          </tr>
        </table>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
