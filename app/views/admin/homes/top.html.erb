<div class="container">
  <div class="row">
    <h3 class="mt-8 mb-3"><span class="back"><strong>注文履歴一覧</strong></span></h3>

    <table class="table table-borderess">

      <thead style="background-color: #f5f5f5;">
        <tr>
          <th><strong>購入日時</strong></th>
          <th><strong>購入者</strong></th>
          <th><strong>注文個数</strong></th>
          <th><strong>注文ステータス</strong></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M") %>
              <% end %>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        <%= paginate @orders %>
      </tbody>

    </table>
  </div>
</div>

<style>
.pagination {
  justify-content: center;
  margin: 0 auto;
}

.page {
  margin: 0 5px;
}
</style>