<%= form_with model: address do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :post_code, class: "form-control" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, class: "form-control" %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <td>
      <% if current_page?(addresses_path) %>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      <% else %>
        <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
      <% end %>
      </td
    </tr>
  </table>
<% end %>