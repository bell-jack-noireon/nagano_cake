<div class="container-feild mt-5">
  <div class="row">
   <div class="col-2 offset-1">
      <h4 class="bg-light text-center">注文情報入力</h4>
    </div>
  </div>

   <div class="row">
     <div class="col-9 offset-1">

     <%= form_with model: @order, url:confirm_orders_path, local: true do |f| %>
   <table>
    <tr>
     <th>支払方法</th>
    </tr>
    <tr>
     <td>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
　　 </td>
    </tr>
    <tr>
     <td>
       <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
       <%= f.label :payment_method_bank_transfer, Order.payment_methods_i18n[:bank_transfer]%>
     </td>
    </tr>
    <tr>
     <th>お届け先</th>
     </tr>
    <tr>
     <td>
      <%= f.radio_button :address_id, 0 %><%= f.label :address_id_0, "ご自身の住所" %><br>
　　  〒<%= current_customer.post_code %> <%= current_customer.address %><br>
　　  <%= current_customer.last_name %><%= current_customer.first_name %>
     </td>
    </tr>
    <tr>
     <td><%= f.radio_button :address_id, 1 %><%= f.label :address_id_1, "登録済みの住所" %></td>
    </tr>
    <tr>
     <td><%= f.select :address_id, options_from_collection_for_select(@address, :id, :address_display) %></td>
    </tr>
    <tr>
     <td><%= f.radio_button :address_id, 2 %><%= f.label :address_id_2, "新しいお届け先" %></td>
    </tr>
    <tr>
     <td>郵便番号(ハイフンなし)<%= f.text_field :post_code, placeholder: "0000000" %></td>
    </tr>
    <tr>
     <td>住所<%= f.text_field :address, placeholder: "東京都渋谷区代々木町0-0" %></td>
    </tr>
    <tr>
     <td>宛名<%= f.text_field :name, placeholder: "令和道子" %></td>
    </tr>
    <tr>
     <td><%= f.submit '確認画面へ進む', class: "btn btn-primary" %></td>
    </tr>
      <% end %>
       </div>
     </div>
  </table>
</div>