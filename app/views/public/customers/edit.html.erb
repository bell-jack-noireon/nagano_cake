<div class="container">
  <% if @customer.errors.any? %>
    <ul class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <%= @customer.errors.count %>件のエラーが発生しました
      </h6>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h3>会員情報編集</h3>
  <div class="row">
    <div class="col-xs-12">
      <%= form_with model: @customer, url: customers_information_path, local: true, method: :patch do |f| %>
      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :氏名, class:"col-sm-4 control-label" %>
          <%= f.text_field :last_name, class:"col-sm-3" %>
          <%= f.text_field :first_name, class:"col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :フリガナ, class:"col-sm-4 control-label" %>
          <%= f.text_field :last_name_kana, class:"col-sm-3" %>
          <%= f.text_field :first_name_kana, class:"col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :郵便番号, class:"col-sm-4 control-label" %>
          〒<%= f.text_field :post_code, class:"col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :住所, class:"col-sm-4 control-label" %>
          <%= f.text_field :address, class:"col-sm-7" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :電話番号, class:"col-sm-4 control-label" %>
          <%= f.text_field :phone_number, class:"col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :メールアドレス, class:"col-sm-4 control-label" %>
          <%= f.text_field :email, class:"col-sm-5" %>
        </div>

      </div>
      <div>
        <div class="col-xs-9 col-xs-offset-4">
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          <%= link_to "退会", customers_confirm_path, class:"btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>