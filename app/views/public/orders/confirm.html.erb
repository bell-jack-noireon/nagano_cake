<div class="container mt-3">
  <div class="row">
    <div class="col-3 offset-1">
      <% if @order.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @order.errors.count %>件のエラーが発生しました
          </h6>
           <% @order.errors.hull_messages.each do |message| %>
           <li><%= massage %></li>
           <% end %>
        </ul>
      <% end %>
      <h3>注文情報確認</h3>
    </div>
  </div>

    <div class="row">
      <div class="col-6 mr-5">
        <table>
          <tr>
            <td>商品名</td>
            <td>単価(税込み)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
          <%= @cart_items.each do |cart| %>
          <tr>
            <td><%= cart.item.item_image(20,20) %><strong><%= cart.item.name %></strong></td>
            <td><%= cart.item.tax_incluted_price %></td>
            <td><%= cart.amount %></td>
            <td><%= cart.item.tax_incluted_price*cart.amount %></td>
          </tr>
        </table>
        <% end %>

        <div class="col-2 mr-3">
          <table>
            <tr>
              <td>送料</td>
              <td>800</td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td><%= @tatal.to_s(:delimited)</td>
            </tr>
            <tr>
              <td>請求金額</td>
              <td><%= @tatal+800.to_s(:deliited) %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-1 mr-5 mt-3">
        <h3>支払方法</h3>
        <p><%= @order.payment_method_i18n %></p>
      </div>
    </div>

    <div class ="row">
      <div class="col-7 mr-5 mt-3">
        <h3>お届け先</h3>
        <p>
          <%= @order.post_code %>
          <%= @order.address %><br>
          <%= @order.name %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-2 mt-3 text-center">
        <%= from_with model: @order_new, url: orders_path, local: true, method:post do |f| %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <%= f.hidden_field :post_code, value: @order.post_code %>
          <%= f.hidden_field :address, value: @order.address %>
          <%= f.hidden_field :name, value: @order.name %>
          <%= f.hidden_field :shipping_fee, value: 800 %>
          <%= f.hidden_field :billing_amount, value: @tatal+800.to_s(:deliited %>
          <%= f.hidden_field :payment_method, value: @order.payment_method %>
          <%= f.hidden_field :status, value: "waiting_for_payment" %>
          <%= f.submit"注文を確定する", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>

</div>